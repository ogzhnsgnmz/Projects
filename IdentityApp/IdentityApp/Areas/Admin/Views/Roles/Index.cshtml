@{
    ViewData["Title"] = "RoleList";
}
@model List<AdminModel.RoleViewModel>
<h1>Roller</h1>
<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="admin">Role Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role ismi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a class="btn btn-dark btn-sm" asp-area="admin" asp-controller="roles" asp-action="roleUpdate" asp-route-id="@item.Id"></a></td>
            </tr>
        }
    </tbody>
</table>
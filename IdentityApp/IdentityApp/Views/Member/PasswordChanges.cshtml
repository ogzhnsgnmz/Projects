@model PasswordChangeViewModel
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">
</div>

<form asp-controller="Member" asp-action="PasswordChange" method="post">
    <div class="row mb-3">
        <label for="PasswordOld" class="col-md-4" asp-for="PasswordOld">Mevcut Şifre</label>
        <div class="col-md-8">
            <input asp-for="PasswordOld" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="PasswordOld"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="PasswordNew" class="col-md-4" asp-for="PasswordNew">Yeni Şifre</label>
        <div class="col-md-8">
            <input asp-for="PasswordNew" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="PasswordNew"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="PasswordConfirm" class="col-md-4" asp-for="PasswordNewConfirm">Yeni Şifre Tekrar</label>
        <div class="col-md-8">
            <input asp-for="PasswordNewConfirm" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@{
    ViewData["Title"] = "Home Page";
}

@model UserViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <user-pictures-thumbnail class="rounded" style="width:300px;" picture-url="@Model.PictureUrl"></user-pictures-thumbnail>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <table>
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Telefon No</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
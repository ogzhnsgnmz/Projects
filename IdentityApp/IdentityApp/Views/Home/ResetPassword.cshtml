@model ResetPasswordViewModel
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">
</div>

<form method="post">
    <div class="row mb-3">
        <label for="Password" class="col-md-4" asp-for="Password">Password</label>
        <div class="col-md-8">
            <input asp-for="Password" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="PasswordConfirm" class="col-md-4" asp-for="PasswordConfirm">PasswordConfirm</label>
        <div class="col-md-8">
            <input asp-for="PasswordConfirm" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
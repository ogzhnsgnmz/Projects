@model SignUpViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="alert alert-info" role="alert">
</div>

<form asp-controller="Home" asp-action="SignUp" method="post">
    <div class="row mb-3">
        <label for="UserName" class="col-md-4" asp-for="UserName">UserName</label>
        <div class="col-md-8">
            <input asp-for="UserName" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="EMail" class="col-md-4" asp-for="EMail">EMail</label>
        <div class="col-md-8">
            <input asp-for="EMail" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="EMail"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Phone" class="col-md-4" asp-for="Phone">Phone</label>
        <div class="col-md-8">
            <input asp-for="Phone" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Password" class="col-md-4" asp-for="Password">Password</label>
        <div class="col-md-8">
            <input asp-for="Password" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="PasswordConfirm" class="col-md-4" asp-for="PasswordConfirm">PasswordConfirm</label>
        <div class="col-md-8">
            <input asp-for="PasswordConfirm" class="form-control" id="inputEmail3">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>